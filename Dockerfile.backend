FROM python:3.12-slim

RUN pip install uv

WORKDIR /app

# Copy only backend-relevant files
COPY pyproject.toml uv.lock ./
COPY backend ./backend
COPY prediction.py .
COPY models ./models

RUN uv sync --frozen

EXPOSE 8000

CMD ["uv", "run", "uvicorn", "backend.main:app", "--host", "0.0.0.0", "--port", "8000"]


